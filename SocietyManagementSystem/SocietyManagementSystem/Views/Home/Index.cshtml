@{
    ViewBag.Title = "Home Page";
    <link rel="stylesheet" type="text/css" href="~/Content/Home.css" />
}

<div class="demo-wrap">
    <img class="demo-bg"
         src="~/util/images/HomeCover.jpg"
         alt="">
    <div class="row">
        <div class="col-lg-6">
            <div class="demo-content">
                <h1>Student Societies</h1>
            </div>
        </div>
        <div class="sideimg col-lg-4">
            <img src="~/util/images/Home2.jpg" height="350px" width="450px">
            <div class="box"></div>
        </div>
    </div>
</div>

<div class="cards_wrap">

    <!-- FIRST ROW WITH 4 COLS  -->

    <div class="row">
        <div class="card " style="width: 17rem;">
            <img src="~/util/images/Society-Logo/fdss.jpg" class="card-img-top roundimg">
            <div class="card-body">
                <h5 class="card-title">FAST Data Science Society (FDSS)</h5>
            </div>
            <div class="readbtn">
                @Html.ActionLink("READ MORE", "Index", "About", new { id = "FDSS" }, new { @class = "btn btn-primary" })

            </div>
        </div>
        <div class="card cards" style="width: 17rem;">
