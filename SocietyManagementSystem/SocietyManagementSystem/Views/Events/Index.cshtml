@model List<SocietyManagementSystem.Models.EventInfo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" type="text/css" href="~/Content/Events.css" />
}

<!-- Events Page -->

<div id="carousel">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/util/images/Events/cover1.png" class="d-block w-100" style="height: 32rem;">
            </div>
            <div class="carousel-item">
                <img src="~/util/images/Events/cover2.jpg" class="d-block w-100" style="height: 32rem;">
            </div>
            <div class="carousel-item">
                <img src="~/util/images/Events/cover3.jpg" class="d-block w-100" style="height: 32rem;">
            </div>
            <div class="carousel-item">
                <img src="~/util/images/Events/cover4.jpg" class="d-block w-100" style="height: 32rem;">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div id="Events">
    <div class="container-fluid">
        <div class="upcoming">
            <h1>Upcoming Events</h1>

            <div class="row">
                @foreach (var c1 in Model)
                {

                    if (c1.Date_Time.Date >= DateTime.Now.Date)
                    {
                        <div class="col-lg-3">
                            <div class="card" style="width: 18rem;">
                                <img src="~/util/images/Events/Event1.png" class="card-img-top" style="height: 12rem;">



                                <div class="card-body">



                                    <p class="event-type"> @Html.DisplayFor(m => c1.Event_Type)</p>

                                    <p class="title"> @Html.DisplayFor(m => c1.Name)</p>
                                    <p class="details"><i class="fa-solid fa-bullhorn"></i> @Html.DisplayFor(m => c1.Guest_name)</p>



                                <p class="details"><i class="fa-regular fa-building"></i> @Html.DisplayFor(m => c1.SocietyName)</p>

                                    <p class="details"><i class="fa-regular fa-calendar"></i> @Html.DisplayFor(m => c1.Date_Time.Date)</p>
                                    <p class="details"><i class="fa-regular fa-clock"></i> @Html.DisplayFor(m => c1.Date_Time.TimeOfDay)</p>
                                    <p class="details"><i class="fa-solid fa-location-dot"></i> @Html.DisplayFor(m => c1.Venue)</p>
                                    @Html.ActionLink("REGISTER", "Index", "Registration", new { id = c1.EventId }, new { @class = "btn btn-outline-primary" })

                                </div>



                            </div>

                        </div>
                    }

                }
                @*Show this DIV(edit button) only if the person is authorized*@
                @if (@ViewBag.isAdmin.ToString()== "True")
                {
                    <div class="col-lg-3">


                        <div class="card-body-icon">
                            <a href="/Events/GetSocietyEvent">

                                <i class="fa fa-plus-circle" style="color:black;"> </i>

                            </a>



                        </div>

                    </div>
                }

            </div>
        </div>
        <hr />
        <div class="past">
            <h1>Past Events</h1>
            <div class="row">
                @foreach (var c1 in Model)
                {

                    if (c1.Date_Time.Date < DateTime.Now.Date)
                    {

                        <div class="col-lg-3">
                            <div class="card" style="width: 18rem;">
                                <img src="~/util/images/Events/Event1.png" class="card-img-top" style="height: 12rem;">

                                <div class="card-body">



                                    <p class="event-type"> @Html.DisplayFor(m => c1.Event_Type)</p>
                                    <p class="title"> @Html.DisplayFor(m => c1.Name)</p>

                                    <p class="details"><i class="fa-solid fa-bullhorn"></i> @Html.DisplayFor(m => c1.Guest_name)</p>



                                    <p class="details"><i class="fa-regular fa-building"></i> @Html.DisplayFor(m => c1.SocietyName)</p>
                                    <p class="details"><i class="fa-regular fa-calendar"></i> @Html.DisplayFor(m => c1.Date_Time.Date)</p>
                                    <p class="details"><i class="fa-regular fa-clock"></i> @Html.DisplayFor(m => c1.Date_Time.TimeOfDay)</p>
                                    <p class="details"><i class="fa-solid fa-location-dot"></i> @Html.DisplayFor(m => c1.Venue)</p>
                                    @Html.ActionLink("REGISTER", "Index", "Registration", new { id = c1.EventId }, new { @class = "btn btn-outline-primary" })

                                </div>



                            </div>

                        </div>
                    }
                }

            </div>
          
        </div>
    </div>
</div>

<!-- Events Page -->
